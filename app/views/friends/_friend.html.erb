<div class="jumbotron">
  <h1 class="display-4"><%= friend.first_name %>  <%= friend.last_name %></h1>
  <p class="lead"><%= friend.email %> | <%= friend.phone %> | <%= friend.gender %></p>
 
   <%= link_to "Edit ", edit_friend_path(@friend) , class:"btn btn-secondary btn-sm" %> 
  <%= link_to "Back ", friends_path , class:"btn btn-secondary btn-sm" %>
   <%= button_to "Delete this friend", @friend, method: :delete %>
  
</div>



