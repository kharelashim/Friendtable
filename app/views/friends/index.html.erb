

<% if user_signed_in?%> 
<p style="color: green">

<h1><a href="#" class="text-primary">Friend List </h1>
<table class= "table table-striped table-bordered table-hover">
  <thead class="thead-dark">

    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Sex</th>
      <th>User-Id</th>
      <th></th>

    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friends| %>
    <% if friends.user == current_user %>
      <tr>
        <td>
        <%=link_to friends.first_name + ' ' +  friends.last_name , friends%>
    
     
        </td>
        <td><%= friends.email %></td>
        <td><%= friends.phone%></td>
        <td><%= friends.gender %></td>
         <td><%= friends.user_id %></td>
        <td>
        

          <%= link_to "Delete", friends, method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-outline-danger btn-sm" %>
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary"%>


<% else %>


<h1>Please login</h1>

<%end%>



